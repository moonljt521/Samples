<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="name1"
            type="com.moon.samples.databinding.NameBody"/>

        <variable
            name="name2"
            type="com.moon.samples.databinding.Name2Body"/>

        <variable
            name="myHandler"
            type="com.moon.samples.databinding.MyHandlers"/>

        <variable
            name="task"
            type="com.moon.samples.databinding.Task"/>

        <variable
            name="imageModel"
            type="com.moon.samples.databinding.ProfileViewModel"/>
    </data>



<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moon.samples.databinding.DataBindingDemoActivity">

    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/databind_tv"
        android:padding="10dp"
        android:background="@android:color/darker_gray"
        android:onClick="@{myHandler::onClickHandler}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{name1.name}"
        />


    <ImageView
        app:layout_constraintTop_toBottomOf="@+id/databind_tv"
        app:imageUrl="@{imageModel.imageUrl}"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:color/holo_purple"
        android:layout_width="200dp"
        android:layout_height="200dp"

        />

</android.support.constraint.ConstraintLayout>


</layout>
