<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moon.samples.arouter_a.ARouter_A_Activity">

    <TextView
        android:id="@+id/arouter_label1"
        android:text="activity 跳转 ----------"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@+id/arouter_label1"
        android:id="@+id/arouter_btn1"
        android:layout_width="0dp"
        android:text="activity跳转"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/arouter_btn2"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/arouter_btn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="activity跳转（参数）"
        app:layout_constraintBottom_toBottomOf="@+id/arouter_btn1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/arouter_btn1"
        app:layout_constraintRight_toLeftOf="@+id/arouter_btn3"
        app:layout_constraintTop_toTopOf="@+id/arouter_btn1"/>

    <Button
        android:id="@+id/arouter_btn3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Activity跳转，回调"
        app:layout_constraintBottom_toBottomOf="@+id/arouter_btn2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/arouter_btn2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/arouter_btn2"/>


    <Button
        android:id="@+id/arouter_btn4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Activity跳转，动画"
        app:layout_constraintTop_toBottomOf="@+id/arouter_btn3"/>



    <TextView
        app:layout_constraintTop_toBottomOf="@+id/arouter_btn4"
        android:id="@+id/arouter_label2"
        android:layout_marginTop="20dp"
        android:text="服务 ------------"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/arouter_btn5"
        android:layout_width="0dp"
        android:text="获取服务"
        app:layout_constraintTop_toBottomOf="@+id/arouter_label2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"/>




</android.support.constraint.ConstraintLayout>
