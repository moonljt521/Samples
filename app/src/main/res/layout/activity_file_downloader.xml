<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moon.samples.FileDownloaderActivity">

    <Button
        android:text="start"
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintLeft_toRightOf="@+id/start"
        android:text="pause"
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        app:layout_constraintLeft_toRightOf="@+id/pause"
        android:text="delFile"
        android:id="@+id/delFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/start"
        android:id="@+id/downlaod_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="10dp"
        android:hint="filepath"
        app:layout_constraintTop_toBottomOf="@+id/downlaod_content"
        android:id="@+id/file_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
